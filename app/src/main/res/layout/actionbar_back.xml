<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimary"
                android:layout_height="?actionBarSize">
    <ImageButton
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" android:id="@+id/actionbar_back"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:background="@color/Transparent"
        android:padding="10dp"
        android:tint="@color/TextColor"
        android:layout_width="wrap_content" android:layout_height="match_parent"/>

    <ImageButton
        android:layout_centerVertical="true" android:id="@+id/temp_Button"
        android:layout_alignParentEnd="true" android:visibility="invisible"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:background="#00000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/actionbar_title"
        android:text="Activity Label" android:textSize="20sp"
        android:textColor="@color/TextColor"
        android:textAlignment="center" android:layout_centerVertical="true"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_toStartOf="@id/temp_Button"
        android:layout_toEndOf="@+id/actionbar_back"/>

</RelativeLayout>