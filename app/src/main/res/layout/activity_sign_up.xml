<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gawds.nitkkr.com.miracle.UI.Activity.SignUp">

    <include layout="@layout/actionbar_back"
        android:id="@+id/signupbar"
        android:layout_width="match_parent" android:layout_height="?actionBarSize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Administrator"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dgts__margin_left"
        android:layout_below="@id/signupbar">
        <EditText
          android:layout_width="match_parent"
          android:layout_height="@dimen/textFieldHeight"
          android:hint="Name"
            android:id="@+id/name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="Mobile"
            android:id="@+id/mobile"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="E-Mail"
            android:id="@+id/email"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="Gender"
            android:entries="@array/Gender"
            android:id="@+id/gender"/>
    </LinearLayout>
    <Spinner
        android:layout_width="match_parent"

        android:id="@+id/signUpType"
        android:entries="@array/UserType"
        android:layout_marginTop="5dp"
        android:layout_height="@dimen/textFieldHeight"
        android:layout_below="@+id/Administrator"
        android:layout_alignStart="@+id/signupbar"
        android:layout_marginLeft="@dimen/dgts__margin_left"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/Student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpType"
        android:layout_marginLeft="@dimen/dgts__margin_left"
        >
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="Year"
            android:entries="@array/Year"
            android:id="@+id/year"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="Branch"
            android:entries="@array/Branch"
            android:id="@+id/branch"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="Section"
            android:id="@+id/section"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="Roll Number"
            android:id="@+id/rollNumber"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Register"/>
</RelativeLayout>
